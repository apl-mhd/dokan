# ============================================
# Dokan API - Environment Variables Example
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# Django Settings
# ============================================
DEBUG=True
SECRET_KEY=django-insecure-0j@7uhvt=-9g*blcn$$0o1wv5&z7b%5^9vrw36iv2#1kkf$!f1
DJANGO_SETTINGS_MODULE=dokan.settings.dev

# ============================================
# PostgreSQL Database Configuration
# ============================================
# These are used by the PostgreSQL container
POSTGRES_DB=dokan_db
POSTGRES_USER=dokan_user
POSTGRES_PASSWORD=dokan_password
POSTGRES_PORT=5432

# ============================================
# Django Database Connection
# ============================================
# These are used by Django to connect to PostgreSQL
DATABASE_NAME=dokan_db
DATABASE_USER=dokan_user
DATABASE_PASSWORD=dokan_password
DATABASE_HOST=db
DATABASE_PORT=5432

# ============================================
# API Configuration
# ============================================
API_PORT=8000
ALLOWED_HOSTS=*
CORS_ALLOW_ALL_ORIGINS=True

# ============================================
# Gunicorn Configuration
# ============================================
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2
GUNICORN_LOG_LEVEL=info
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_GRACEFUL_TIMEOUT=30

# ============================================
# Production Settings (uncomment when deploying)
# ============================================
